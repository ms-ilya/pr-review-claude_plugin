{
  "$schema": "http://json-schema.org/draft-07/schema#",
  "type": "object",
  "required": ["agent", "findings", "status"],
  "properties": {
    "agent": {"type": "string", "enum": ["pr-file-analyzer", "pr-dry-analyzer", "pr-breaking-analyzer", "pr-solid-analyzer"]},
    "status": {"type": "string", "enum": ["completed", "skipped"]},
    "findings": {
      "type": "array",
      "items": {
        "type": "object",
        "required": ["severity", "category", "file", "line", "issue"],
        "properties": {
          "severity": {"type": "string", "enum": ["critical", "warning", "suggestion"]},
          "category": {"type": "string"},
          "file": {"type": "string"},
          "line": {"type": "integer", "minimum": 1},
          "issue": {"type": "string", "minLength": 10},
          "evidence": {"type": "string"},
          "fix": {"type": "string"}
        },
        "additionalProperties": false
      }
    }
  },
  "additionalProperties": false
}
