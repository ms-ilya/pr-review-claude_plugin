{
  "$schema": "http://json-schema.org/draft-07/schema#",
  "$id": "https://pr-review-plugin/schemas/agent-output.schema.json",
  "title": "Agent Output",
  "description": "Schema for output files produced by all review agents",
  "type": "object",
  "required": ["agent", "findings"],
  "properties": {
    "agent": {
      "type": "string",
      "enum": [
        "pr-file-analyzer",
        "pr-dry-analyzer",
        "pr-breaking-analyzer"
      ]
    },
    "file": {
      "type": "string"
    },
    "findings": {
      "type": "array",
      "items": {
        "$ref": "finding.schema.json"
      }
    },
    "skipped_candidates": {
      "type": "integer",
      "minimum": 0
    }
  },
  "additionalProperties": false
}
